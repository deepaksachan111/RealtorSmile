<android.support.v7.widget.Toolbar
    android:id="@+id/document_toolbar"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/colorPrimary"
    android:minHeight="?attr/actionBarSize">

    <TextView
        android:id="@+id/document_tool_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@mipmap/home"
        android:textColor="#fff"
        android:textSize="19sp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="14dp"
        android:gravity="right">

        <TextView
            android:id="@+id/document_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@mipmap/delete"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#fff"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"/>

        <TextView
            android:id="@+id/document_addNew"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@mipmap/add_new"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#fff"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/document_delete"
            android:layout_toStartOf="@+id/document_delete"/>

    </RelativeLayout>

</android.support.v7.widget.Toolbar><!-- From: file:/D:/DeepakAndroid/RealtorSmile/app/src/main/res/layout/document_toolbar.xml -->