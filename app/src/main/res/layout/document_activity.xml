<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eeeeee"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <include layout="@layout/document_toolbar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:weightSum="5.5">


        <EditText
            android:id="@+id/document_search_editText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="3dp"
            android:layout_weight="3.1"
            android:background="@drawable/edit_layout_bg"
            android:hint="Search here.."
            android:inputType="textPersonName"
            android:paddingBottom="3dp"
            android:paddingLeft="7dp"
            android:paddingRight="3dp"
            android:paddingTop="3dp"
            android:textColor="#888"/>




    </LinearLayout>

    <include layout="@layout/document_listview_header"/>

    <ListView
        android:id="@+id/document_list_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:cacheColorHint="@android:color/transparent"
        android:divider="#adb8c2"
        android:dividerHeight="1dp"/>
</LinearLayout>
