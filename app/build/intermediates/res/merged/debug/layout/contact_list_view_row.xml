<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="#EEE"
    android:padding="4dp"
    android:descendantFocusability="blocksDescendants"
    tools:ignore="HardcodedText,ContentDescription" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <CheckBox
            android:id="@+id/contact_checkBox"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.6"
            android:focusable="false"
            android:focusableInTouchMode="false" />

        <TextView
            android:textColor="#428BCA"
            android:id="@+id/contact_fullNameTv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2.5"
          android:text="Full Name" />

        <TextView
            android:id="@+id/contact_typeTv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.9"
          android:text="Contact Type" />

        <TextView
            android:id="@+id/contact_mobileNoTv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
           android:text="9076483982" />
    </LinearLayout>

</RelativeLayout><!-- From: file:/D:/DeepakAndroid/RealtorSmile/app/src/main/res/layout/contact_list_view_row.xml -->