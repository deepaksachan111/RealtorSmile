<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">




        <ImageView
            android:id="@+id/header_cover_image"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:scaleType="centerCrop"
            android:src="@drawable/blue_background" />

        <ImageButton
            android:id="@+id/user_profile_photo"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_below="@+id/header_cover_image"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="-60dp"
            android:background="@drawable/profile_circular_border_imageview"
            android:elevation="5dp"
            android:padding="20dp"
            android:scaleType="centerCrop"
            android:src="@drawable/user_user" />

        <RelativeLayout
            android:id="@+id/profile_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/header_cover_image"
            android:background="#ebca0707"
            android:elevation="4dp"
            android:paddingBottom="24dp">


            <ImageView
                android:id="@+id/add_friend"
                android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:layout_toLeftOf="@+id/drop_down_option_menu"
            android:src="@mipmap/add_user" />

            <ImageView
             android:layout_marginRight="5dp"
                android:id="@+id/drop_down_option_menu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:src="@mipmap/custum_menu" />

            <TextView
                android:fontFamily="monospace"
                android:id="@+id/user_profile_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="76dp"
                android:text="User Profile"
                android:textColor="#fff"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:fontFamily="sans-serif-light"
                android:id="@+id/user_profile_short_bio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/user_profile_name"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="12dp"
                android:text="Manage your Profile Details or Contact Details"
                android:textColor="#fff"
                android:textSize="14sp" />
        </RelativeLayout>


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/profile_layout"
            android:layout_marginTop="5dp"
            android:orientation="vertical">

            
            <LinearLayout
                android:id="@+id/linear_profile"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:background="#fff"
                android:clickable="true"
                android:elevation="4dp"
                android:padding="20dp"
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
            <TextView
                android:fontFamily="sans-serif-condensed"
                android:layout_weight="8"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Profile Details" />
                
                <FrameLayout

                    android:layout_weight="1"
                    android:layout_gravity="right"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">
                    <ImageButton
                        android:id="@+id/profile_show"
                        android:src="@android:drawable/ic_menu_add"
                        android:layout_width="20dp"
                        android:layout_height="20dp" />

                    <ImageButton
                        android:id="@+id/profile_hide"
                        android:visibility="gone"
                        android:src="@android:drawable/presence_busy"
                        android:layout_width="20dp"
                        android:layout_height="20dp" />
                </FrameLayout>

            </LinearLayout>
           <!-- .........................................................................................................-->

            <LinearLayout

                android:visibility="gone"
                android:id="@+id/linearprofile_show"
                android:elevation="4dp"
                android:padding="10dp"
                android:background="@android:color/transparent"
                android:layout_margin="10dp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
        
                <LinearLayout
                    android:padding="10dp"
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">

                    <TextView

                        android:fontFamily="sans-serif-light"
                        android:layout_marginRight="20dp"
                        android:gravity="right"
                        android:layout_weight="1"
                        android:text="First Name"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content" />

                    <TextView

                        android:fontFamily="sans-serif-light"
                        android:layout_marginLeft="20dp"
                        android:layout_weight="1"
                        android:text="First Name "
                        android:layout_width="0dp"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <LinearLayout
                    android:padding="10dp"

                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:fontFamily="sans-serif-light"
                        android:layout_marginRight="20dp"
                        android:gravity="right"
                        android:layout_weight="1"
                        android:text="Last Name"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:fontFamily="sans-serif-light"
                        android:layout_marginLeft="20dp"
                        android:layout_weight="1"
                        android:text="Last Name "
                        android:layout_width="0dp"
                        android:layout_height="wrap_content" />
                </LinearLayout>


                <LinearLayout
                    android:padding="10dp"

                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:fontFamily="sans-serif-light"
                        android:layout_marginRight="20dp"
                        android:gravity="right"
                        android:layout_weight="1"
                        android:text="Mobile"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:fontFamily="sans-serif-light"
                        android:layout_marginLeft="20dp"
                        android:layout_weight="1"
                        android:text="Mobile"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content" />
                </LinearLayout>

            </LinearLayout>

            <!--
            ..........................................................................................................-->


            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_marginBottom="3dp"
                android:layout_marginTop="3dp"
                android:background="#fff"
                android:clickable="true"
                android:elevation="4dp"
                android:padding="20dp"
                android:text="Change Password" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="#fff"
                android:elevation="4dp"
                android:padding="20dp"
                android:text="Email Setup" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_marginBottom="3dp"
                android:layout_marginTop="3dp"
                android:background="#fff"
                android:clickable="true"
                android:elevation="4dp"
                android:padding="20dp"
                android:text="Android Profile XMl UI Design" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="#fff"
                android:clickable="true"
                android:elevation="4dp"
                android:padding="20dp"
                android:text="Android Profile UI Design" />
        </LinearLayout>
    </RelativeLayout>
</ScrollView><!-- From: file:/D:/DeepakAndroid/RealtorSmile/app/src/main/res/layout/profile_activity.xml -->