<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@android:color/background_light">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="1dp">
        >
        <LinearLayout

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:background="@android:color/darker_gray"
                android:padding="5dp"
                android:textStyle="bold"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Create Quick Search" />

            <TextView
                android:padding="5dp"
                android:textColor="#B94A48"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Type" />

         <EditText
             android:id="@+id/et_popupaddnew_tpe"
             android:padding="5dp"
             android:focusable="false"
             android:hint="General"
             android:background="@drawable/spinner_bg"
             android:layout_width="fill_parent"
             android:layout_height="wrap_content" />
            <TextView
                android:padding="5dp"
                android:textColor="#B94A48"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Contact Group" />

            <EditText
                android:background="@drawable/edit_layout_bg"
                android:id="@+id/et_popupaddnew_contactgroup"
                android:padding="5dp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
            <Button
                android:id="@+id/btn_popupaddnew_save"
                android:drawableLeft="@android:drawable/checkbox_on_background"
                android:text="Save"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <Button
                android:id="@+id/btn_popupaddnew_close"
                android:text="Close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>